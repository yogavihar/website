<div class="tab-pane fade{% if categoryIndex == 0 %} in active{% endif %}" id="{{ category.id }}">

    <div class="row">

        <div class="col-md-12">
            {% for providerId, fieldIds in categoryIdToProviderIdToFieldsMap[category.id] %}

                {% if fieldIds is not empty %}

                    {% set fieldProvider = attribute(fieldProviders, providerId) %}
                    {% include 'options-ui/page-fragments/single-field-provider.html.twig' %}

                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>

