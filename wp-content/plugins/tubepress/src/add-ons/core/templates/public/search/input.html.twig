<form accept-charset="utf-8" method="get" action="{{ searchHandlerURL }}">
	<fieldset class="tubepress_search">

		{#
         # read http://stackoverflow.com/questions/1116019/submitting-a-get-form-with-query-string-params-and-hidden-params-disappear
         # if you're curious as to what's going on here
         #}
		{% for name, value in searchHiddenInputs %}

            <input type="hidden" name="{{ name }}" value="{{ value }}" />

        {% endfor %}

        <input type="text" id="tubepress_search" name="tubepress_search" class="tubepress_text_input" value="{{ searchTerms }}" />

		<button class="tubepress_button" title="Submit Search">
            {{ 'Search'|trans }}    {# //>(translatable)< #}
        </button>
	</fieldset>
</form>
