<p>
    <label for="{{ titleFieldId }}">
        Title
        <input class="widefat" id="{{ titleFieldId }}" name="{{ titleFieldName }}" type="text" value="{{ titleFieldValue }}" />
    </label>
</p>
<p>
    <label for="{{ textFieldId }}">
        {{ textFieldDesc|raw }}
        <textarea class="widefat" rows="9" cols="12" id="{{ textFieldId }}" name="{{ textFieldName }}">
            {{- textFieldValue|raw -}}{# wordpress already escaped this #}
        </textarea>
    </label>
</p>